<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/basic_Fname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="First Name" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/basic_Lname"
        android:hint="Last Name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/basic_City"
        android:layout_above="@+id/basic_AddressLine1"
        android:layout_toLeftOf="@+id/basic_MI"
        android:layout_toStartOf="@+id/basic_MI" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_AddressLine1"
        android:layout_below="@+id/basic_Fname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Address Line 1"
        android:layout_alignRight="@+id/basic_MI"
        android:layout_alignEnd="@+id/basic_MI" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_AddressLine2"
        android:layout_below="@+id/basic_AddressLine1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/basic_AddressLine1"
        android:layout_alignEnd="@+id/basic_AddressLine1"
        android:hint="Address Line 2" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/basic_City"
        android:layout_below="@+id/basic_AddressLine2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="City" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/basic_State"
        android:layout_alignBottom="@+id/basic_City"
        android:layout_toRightOf="@+id/basic_City"
        android:layout_toEndOf="@+id/basic_City"
        android:hint="State" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_Zip"
        android:layout_toRightOf="@+id/basic_State"
        android:layout_alignBottom="@+id/basic_State"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Zip" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_DOB"
        android:layout_below="@+id/basic_City"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Date of Birth (MM/DD/YY)"
        android:inputType="date"
        android:layout_alignRight="@+id/basic_Zip"
        android:layout_alignEnd="@+id/basic_Zip" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_Phone"
        android:layout_below="@+id/basic_DOB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/basic_Zip"
        android:layout_alignEnd="@+id/basic_Zip"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_Email"
        android:layout_below="@+id/basic_Phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/basic_Zip"
        android:layout_alignEnd="@+id/basic_Zip"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_MI"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/basic_AddressLine1"
        android:hint="MI" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basic_SSN"
        android:layout_below="@+id/basic_Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Social Security Number" />

</RelativeLayout>